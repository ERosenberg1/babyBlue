<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nametbd.babyblue.Room101">

    <TextView
        android:id="@+id/RoomNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        android:text="Room Number 123" />

    <TextView
        android:id="@+id/PatientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        android:text="Janky Memes" />
    <!--Pulse BUTTON-->
    <Button
        android:id="@+id/Pulse"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RoomNumber"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16dp"
        android:text="Pulse" />

    <TextView
        android:id="@+id/PulseVal"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Pulse"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:gravity="center" />

    <!--Temperature-->
    <Button
        android:id="@+id/Temperature"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/PatientName"
        android:layout_marginRight="15dp"
        android:layout_marginTop="16dp"
        android:text="Temperature" />

    <TextView
        android:id="@+id/TempVal"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Temperature"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:gravity="center" />
    <!--Systolic Pressure-->
    <Button
        android:id="@+id/SysPressure"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PulseVal"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16dp"
        android:onClick="openSysPressure"
        android:text="Pressure (S)" />

    <TextView
        android:id="@+id/PressVal1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SysPressure"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:gravity="center" />
    <!--Diastolic Pressure-->
    <Button
        android:id="@+id/DiaPressure"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TempVal"
        android:layout_marginRight="15dp"
        android:layout_marginTop="16dp"
        android:text="Pressure (D)" />

    <TextView
        android:id="@+id/PressVal2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/DiaPressure"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:gravity="center" />

    <!--O2 Levels-->
    <Button
        android:id="@+id/o2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PressVal1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16dp"
        android:text="O2" />

    <TextView
        android:id="@+id/o2val"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/o2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:gravity="center" />
    <!--Respiration Rate-->
    <Button
        android:id="@+id/Respiration"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/PressVal2"
        android:layout_marginRight="15dp"
        android:layout_marginTop="16dp"
        android:text="Respiration" />

    <TextView
        android:id="@+id/RespVal"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Respiration"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:gravity="center" />

    <Button
        android:id="@+id/IV2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="IV 2 Flow Rate" />

    <Button
        android:id="@+id/IV1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/IV2"
        android:onClick="openInfusion1"
        android:text="IV 1 Flow Rate" />
    />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/IV1"
        android:layout_centerHorizontal="true"
        android:text="Start" />

</RelativeLayout>
