<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nametbd.babyblue.MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text ="Alarm Here"
        android:textSize="17sp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:onClick="openAlarm"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Room 101"
        android:id="@+id/Patient1"
        android:textSize="17sp"
        android:layout_marginTop="15dp"
        android:onClick="openRoom101"/>
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Room 102"
        android:textSize="17sp"
        android:id="@+id/Patient2"
        android:layout_marginTop="15dp"
        android:onClick="openRoom101"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Room 103"
        android:textSize="17sp"
        android:id="@+id/Patient3"
        android:layout_marginTop="15dp"
        android:onClick="openRoom101"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Room 104"
        android:textSize="17sp"
        android:id="@+id/Patient4"
        android:layout_marginTop="15dp"
        android:onClick="openRoom101"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Room 105"
        android:textSize="17sp"
        android:id="@+id/Patient5"
        android:layout_marginTop="15dp"
        android:onClick="openRoom101"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Add Room"
        android:layout_gravity="center"
        android:textSize="17sp"
        android:id="@+id/Add"
        android:layout_marginTop="10dp"
        />
</LinearLayout>
